graph TD
    subgraph IoT_Device_Layer["物联网设备层"]
        Device["传感器/执行器"]
        Gateway["边缘网关"]
    end

    subgraph Platform_Server["平台服务端"]
        AccessServer["接入服务器 (MQTT/CoAP)"]
        AppServer["应用服务器 (Web/API)"]
        
        subgraph Data_Storage["数据存储"]
            RDBMS[("关系数据库 (MySQL)")]
            GraphDB[("图数据库 (Neo4j)")]
            TSDB[("时序数据库 (InfluxDB)")]
        end
    end

    subgraph User_Terminal["用户终端"]
        PC["Web浏览器 (PC)"]
        Mobile["移动端App"]
    end

    Device -- "Zigbee/Bluetooth" --> Gateway
    Gateway -- "MQTT/CoAP (TLS)" --> AccessServer
    AccessServer -- "Internal API" --> AppServer
    AppServer -- "JDBC" --> RDBMS
    AppServer -- "Bolt/HTTP" --> GraphDB
    AppServer -- "HTTP" --> TSDB
    PC -- "HTTPS" --> AppServer
    Mobile -- "HTTPS" --> AppServer
